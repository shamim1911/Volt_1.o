void setup() {
  pinMode(3, OUTPUT);

  display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS);
  display.display();
  display.clearDisplay();
  display.setRotation(3);

  // Display the phone logo
  display.drawBitmap(0, 0, phoneLogoBitmap, 64, 30, 1);
  display.display();

  // Show the phone name "Volt1.o"
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(18, 40);
  display.println("Volt1.o");
  display.display();

  // Add a delay to show the welcome message for some time
  delay(2000); // 2-second delay

  // Clear the display and continue with the animation
  display.clearDisplay();
  display.display();

  // Animation
  for (int i = 0; i < 32; i++) {
    display.clearDisplay();
    display.drawBitmap(0, i, phoneLogoBitmap, 64, 30, 1);
    display.display();
    delay(50); // 50-millisecond delay between frames
  }

  // Clear the display after the animation
  display.clearDisplay();
  display.display();

  // Rest of your setup code...
}

